{% extends 'base.html.twig' %}

{% block body %}
    <h1>Appointment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ appointment.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ appointment.location }}</td>
            </tr>
            <tr>
                <th>Lessonid</th>
                <td>{{ appointment.lessonId }}</td>
            </tr>
            <tr>
                <th>Employee</th>
                <td>{{ appointment.employee }}</td>
            </tr>
            <tr>
                <th>Customerid</th>
                <td>{{ appointment.customerId }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ appointment.comment }}</td>
            </tr>
            <tr>
                <th>Datepicker</th>
                <td>{% if appointment.datepicker %}{{ appointment.datepicker|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('appointment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('appointment_edit', { 'id': appointment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
