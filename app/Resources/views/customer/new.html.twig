{% extends 'base.html.twig' %}

{% block stylesheets%}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
{% endblock %}
{#{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}#}

{% block body %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Creëer nieuw lid</h1>
        </div>

        <h2>Lid informatie</h2>
        <div class="table-responsive">
            <table class="table">
                {{ form_start(form) }}
                <tr>
                    <td>Voornaam</td>
                    <td>{{ form_widget(form.firstName) }}</td>
                </tr>

                <tr>
                    <td>Achternaam</td>
                    <td>{{ form_widget(form.lastName) }}</td>
                </tr>

                <tr>
                    <td>Email</td>
                    <td>{{ form_widget(form.email) }}</td>
                </tr>
                <tr>
                    <td>Geboortedatum</td>
                    <td>{{ form_widget(form.dateOfBirth) }}</td>
                </tr>
                <tr>
                    <td>Telefoonnummer</td>
                    <td>{{ form_widget(form.telephoneNumber) }}</td>
                </tr>
            </table>
            <input class="btn btn-primary my-2" type="submit" value="Creëer" />
            {{ form_end(form) }}
            <a class="btn btn-info" href="{{ path('customer_index') }}">Terug naar het overzicht</a>
        </div>
    </main>
{% endblock %}
