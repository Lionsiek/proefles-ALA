{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lesson</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lesson.name }}</td>
            </tr>
            <tr>
                <th>Employee</th>
                <td>{{ lesson.employee }}</td>
            </tr>
            <tr>
                <th>Customerid</th>
                <td>{{ lesson.customerId }}</td>
            </tr>
            <tr>
                <th>Dateoflesson</th>
                <td>{% if lesson.dateOfLesson %}{{ lesson.dateOfLesson|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lessonfrom</th>
                <td>{% if lesson.lessonFrom %}{{ lesson.lessonFrom|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lessonuntil</th>
                <td>{% if lesson.lessonUntil %}{{ lesson.lessonUntil|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ lesson.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lesson_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lesson_edit', { 'id': lesson.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
